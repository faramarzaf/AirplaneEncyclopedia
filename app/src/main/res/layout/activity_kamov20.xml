<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.testairplaneencyclopedia.Kamov20Activity"
    android:background="@drawable/background_content"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ka20_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ka20_1"

                />

            <ImageView
                android:id="@+id/ka20_2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="-300dp"
                android:alpha="-5"
                app:srcCompat="@drawable/ka20_2"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_generalExplanation"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_styles_general_text"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="General explanation"
                android:textColor="#ffffff"
                android:textSize="15.2dp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Kamov Ka-20\n(NATO reporting name Harp)\nwas a Soviet twin-engine prototype helicopter designed and built by Kamov that led to the Ka-25family of helicopters.\n\nDeveloped from the earlier Ka-15 to meet a 1958 Soviet Navy requirement\nfor a heavy shipborne helicopter, the Ka-20 had the similar\ntwin contra-rotating, three-blade rotors of the earlier Ka-15 design and was powered by two 670 kW turboshaft engines.\n\nThe Ka-20 first became known outside the Soviet Union at the 1961 Tushino Aviation Day display where a Ka-20 was demonstrated fitted with dummy missiles on the cabin sides."
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18dp"
                android:background="@drawable/background_styles_text"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>