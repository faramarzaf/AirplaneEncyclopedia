<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.testairplaneencyclopedia.Tupolev20Activity"
    android:background="@drawable/background_content"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tu20_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/tu20_1" />

            <ImageView
                android:id="@+id/tu20_2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="-300dp"
                android:alpha="-5"
                app:srcCompat="@drawable/tu20_2" />

            <TextView
                android:id="@+id/tv_generalExplanation"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_styles_general_text"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="General explanation"
                android:textColor="#ffffff"
                android:textSize="15.2dp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/tv_tu20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Tupolev Tu-95\n-Russian: Туполев Ту-95-\n-NATO reporting name: Bear-\nis a large, four-engine\nturboprop-powered strategic\nbomber and missile platform.\nFirst flown in 1952, the Tu-95 entered service with the Soviet Union in 1956\nand is expected to serve the Russian Air Force until at least 2040.\nA development of the bomber for maritime patrol is designated Tu-142, while a passenger airliner derivative was called Tu-114."
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:background="@drawable/background_styles_text"
                android:padding="5dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_general_characteristics"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="34dp"
                    android:background="@drawable/background_styles_general_text"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="General characteristics"
                    android:textColor="#ffffff"
                    android:textSize="15.2dp"
                    android:textStyle="italic" />
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/tabla_cabecera"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableLayout
                        android:id="@+id/tabla_cuerpo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >

                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Roll"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"


                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Strategic heavy bomber"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
