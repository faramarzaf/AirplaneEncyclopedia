<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.testairplaneencyclopedia.HelicoptersActivity"


    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="-50dp"
        android:scaleType="center"
        app:srcCompat="@drawable/civilhelicopterbackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_bell"
                    style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                    android:layout_width="91dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Bell"

                    android:textColor="#000000"
                    android:textSize="17dp"

                    />

                <Button
                    android:id="@+id/btn_mil"
                    style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                    android:layout_width="91dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Mil"

                    android:textColor="#000000"
                    android:textSize="17dp"

                    />

                <Button
                    android:id="@+id/btn_kamov"
                    style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                    android:layout_width="91dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Kamov"

                    android:textColor="#000000"
                    android:textSize="17dp"

                    />


                <Button
                    android:id="@+id/btn_eurocopter"
                    style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                    android:layout_width="91dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Eurocopter"

                    android:textColor="#000000"
                    android:textSize="17dp"

                    />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
