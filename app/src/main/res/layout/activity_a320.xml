<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.testairplaneencyclopedia.A320Activity"
    android:background="@drawable/background_content"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <ImageView
                android:id="@+id/a320_1"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/a320_1"

                />

            <ImageView
                android:id="@+id/a320_2"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="-270dp"
                android:alpha="-5"
                app:srcCompat="@drawable/a320_2"

                />


            <TextView
                android:id="@+id/tv_generalExplanation"
                android:layout_width="@dimen/width_txtView_general"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_styles_general_text"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="General explanation"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSize_txtView_general"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_a320"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_styles_text"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="@string/airbusA320"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_general_characteristics"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="34dp"
                    android:background="@drawable/background_styles_general_text"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="General characteristics"
                    android:textColor="#ffffff"
                    android:textSize="15.2dp"
                    android:textStyle="italic" />
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/tabla_cabecera"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableLayout
                        android:id="@+id/tabla_cuerpo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >

                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="Roll"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"


                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="Narrow-body jet airliner"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="First flight"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="22 February 1987"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="Number built"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="8,074 as of\n31 March 2018"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="Status"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="In service"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center" >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="Cockpit crew"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="2"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="Length"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="31.44 m | 44.51 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="Wing span"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="34.10 m | 35.8 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"


                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="Height"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="12.56 m | 11.76 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="Empty weight"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:padding="5dp"
                                android:text="40133 kg | 49200 kg"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>

                        </TableRow>


                        <TableRow
                            android:id="@+id/tableRow12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="Max speed"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"
                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:padding="5dp"
                                android:text="829 km/h | 871 km/h"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"
                                android:gravity="center"

                                >

                            </TextView>

                        </TableRow>


                        <TableRow
                            android:id="@+id/tableRow13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">


                        </TableRow>
                    </TableLayout>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
