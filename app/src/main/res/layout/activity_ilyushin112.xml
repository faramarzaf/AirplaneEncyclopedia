                                android:gravity="center"
                                android:padding="5dp"
                                android:text="24.15 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Wing span"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="27.6 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"


                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Height"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="8.89 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Take-off weight"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="21,000 kg"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                        </TableRow>


                        <TableRow
                            android:id="@+id/tableRow12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Cruise speed"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="450 km/h"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                        </TableRow>


                        <TableRow
                            android:id="@+id/tableRow13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">


                        </TableRow>
                    </TableLayout>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>