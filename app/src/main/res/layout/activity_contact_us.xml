<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_contact_us_bg"
    android:orientation="vertical"
    android:padding="11dp"
    tools:context="com.google.testairplaneencyclopedia.others.ContactUsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app provides an adept introduction about aircrafts.The corresponding information is categorized and co-explained through photos.\nLooking forward to receive your suggestions.\Contact us via:"
                android:textColor="#e7e7e7"
                android:textSize="17dp"
                android:textStyle="italic"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="tictac_dev@yahoo.com"
                    android:textColor="#00c4ff"
                    android:textIsSelectable="true"
                    android:textSize="17dp"
                    android:layout_marginTop="16dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="292dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#d4d4d4" />

            <TextView
                android:id="@+id/tv_madeBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="tic-tac developments Â©"
                android:textColor="#d4d4d4"
                android:textSize="14dp"
                android:textStyle="bold"

                />


            <ImageView
                android:id="@+id/ic_tictacdevelopments"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="11dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_tictacdevelopments5"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
