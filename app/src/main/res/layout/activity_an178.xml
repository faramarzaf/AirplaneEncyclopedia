<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.testairplaneencyclopedia.An178Activity"
    android:background="@drawable/background_content"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/an178_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/an178_1" />

            <ImageView
                android:id="@+id/an178_2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="-300dp"
                android:alpha="-5"
                app:srcCompat="@drawable/an178_2" />

            <TextView
                android:id="@+id/tv_generalExplanation"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_styles_general_text"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="General explanation"
                android:textColor="#ffffff"
                android:textSize="15.2dp"
                android:textStyle="italic" />




            <TextView
                android:id="@+id/tv_an178"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Antonov An-178\n(Ukrainian: Антонов Ан-178) is a\nshort-range medium-airlift military transport aircraft designed by the Ukrainian Antonov company and based on the Antonov An-158 (An-148-200).\n\nIt was announced on 5 February 2010, rolled out on 16 April 2015 and the first flight was on 7 May 2015.\nThe An-178 is proposed to replace outdated aircraft like the Antonov\nAn-12, An-26 and An-32."
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:background="@drawable/background_styles_text"
                android:padding="5dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_general_characteristics"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="34dp"
                    android:background="@drawable/background_styles_general_text"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="General characteristics"
                    android:textColor="#ffffff"
                    android:textSize="15.2dp"
                    android:textStyle="italic" />
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/tabla_cabecera"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableLayout
                        android:id="@+id/tabla_cuerpo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >

                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Roll"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"


                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Military transport aircraft"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="First flight"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="7 May 2015"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Number built"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="1 Up to year 2015"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">


                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Status"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="In production"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>

                        </TableRow>


                        <TableRow
                            android:id="@+id/tableRow8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Length"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="32.95 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Wing span"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000">

                            </TextView>

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table2"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="28.84 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"


                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Height"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="10.14 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000"

                                >

                            </TextView>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">


                        </TableRow>
                    </TableLayout>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
