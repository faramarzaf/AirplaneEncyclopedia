<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/civilairplanebackground"
    tools:context="com.google.testairplaneencyclopedia.CivilAirplanesActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_airbus"
                style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Airbus"
                android:textColor="#000000"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_antonov"
                style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Antonov"
                android:textColor="#000000"
                android:textSize="17dp"

                />


            <Button
                android:id="@+id/btn_boeing"
                style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Boeing"
                android:textColor="#000000"
                android:textSize="17dp"

                />


            <Button
                android:id="@+id/btn_fokker"
                style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Fokker"
                android:textColor="#000000"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_ilyushin"
                style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Ilyushin"
                android:textColor="#000000"
                android:textSize="17dp"

                />


            <Button
                android:id="@+id/btn_topolev"
                style="@style/Widget.AppCompat.Light.ActionButton.Overflow"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Tupolev"
                android:textColor="#000000"
                android:textSize="17dp"

                />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
