    tools:context="com.google.testairplaneencyclopedia.Tupolev2Activity"
    android:background="@drawable/background_content"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tu2_1"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/tu2_1" />

            <ImageView
                android:id="@+id/tu2_2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="-250dp"
                android:alpha="-5"
                app:srcCompat="@drawable/tu2_2"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_generalExplanation"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_styles_general_text"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="General explanation"
                android:textColor="#ffffff"
                android:textSize="15.2dp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/tv_tu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Tupolev Tu-2\n-development names ANT-58 and 103-\n-NATO reporting name Bat-\nwas a twin-engine Soviet high-speed daylight and frontline (SDB and FB) bomber aircraft of World War II vintage.\n\nThe Tu-2 was tailored to meet a requirement for a high-speed bomber or dive-bomber, with a large internal bombload, and speed similar to that of a single-seat fighter.\nDesigned to challenge the German Junkers Ju 88, the Tu-2 proved comparable, and was produced in torpedo, interceptor and reconnaissance versions.\nThe Tu-2 was one of the outstanding combat aircraft of World War II and it played a key role in the Red Army's final offensives."
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:background="@drawable/background_styles_text"
                android:padding="5dp"

                />
