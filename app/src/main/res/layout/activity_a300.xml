                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_table1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Number built"
