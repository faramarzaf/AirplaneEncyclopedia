<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_contact_us_bg"
    tools:context="com.google.testairplaneencyclopedia.HelpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/help1"
                android:layout_width="180dp"
                android:layout_height="338dp"
                android:src="@drawable/help1"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_margin="7dp"
                android:id="@+id/tv_help1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1_ There are two different pictures for each type that can be shown by clicking on it.\nNOTE: some types especially old ones have only one picture."
                android:textColor="#e7e7e7"
                android:textSize="20dp"

                />

            <ImageView
                android:id="@+id/help2"
                android:layout_width="180dp"
                android:layout_height="338dp"
                android:src="@drawable/help2"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:layout_margin="7dp"
                android:id="@+id/tv_help2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2_ Most of the types possess tables containing general characteristics that provide brief and useful information.(some types have not table)"
                android:textColor="#e7e7e7"
                android:textSize="20dp"

                />

            <TextView
                android:layout_margin="7dp"
                android:id="@+id/tv_help3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3_ In some cases the values depend on types, thus it's possible that you see details like this :\n( 54kg | 64 kg )\nFor example Airbus A300 has these types: A300B4-200, A300-600R, A300-600F."
                android:textColor="#e7e7e7"
                android:textSize="20dp"

                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
